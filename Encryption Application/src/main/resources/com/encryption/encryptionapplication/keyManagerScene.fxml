                              <TableColumn fx:id="publicEmail" prefWidth="75.0" text="Email" />
                              <TableColumn fx:id="publicName" prefWidth="75.0" text="Name" />
                              <TableColumn fx:id="publicSend" prefWidth="75.0" text="Send/Receive" />
                              <TableColumn fx:id="publicKeyValue" prefWidth="75.0" text="KeyValue" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Private Keys">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="553.0" prefWidth="708.0">
                     <children>
                        <TableView fx:id="privateTable" prefHeight="537.0" prefWidth="674.0">
