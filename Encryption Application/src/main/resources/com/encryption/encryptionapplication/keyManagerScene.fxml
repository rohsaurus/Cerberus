            <image>
                <Image url="@Cerberus-logos.jpeg" />
            </image>
        </ImageView>
        <Button fx:id="EncryptButton" contentDisplay="CENTER" layoutX="14.0" layoutY="216.0" mnemonicParsing="false" opacity="0.35" prefHeight="171.0" prefWidth="204.0" text="Encrypt">
            <font>
                <Font size="33.0" />
            </font>
        </Button>
        <Button fx:id="DecryptButton" contentDisplay="CENTER" layoutX="14.0" layoutY="380.0" mnemonicParsing="false" opacity="0.35" prefHeight="171.0" prefWidth="204.0" text="Decrypt">
            <font>
                <Font size="33.0" />
            </font>
        </Button>
        <Button fx:id="KeyPair" contentDisplay="CENTER" layoutX="14.0" layoutY="548.0" mnemonicParsing="false" opacity="0.35" prefHeight="171.0" prefWidth="204.0" text="Generate a Key Pair">
            <font>
                <Font size="19.0" />
            </font>
        </Button>
        <Button fx:id="keyManager" layoutX="233.0" layoutY="343.0" mnemonicParsing="false" onAction="#keyManager" prefHeight="37.0" prefWidth="234.0" rotate="270.0" text="Manage Keys">
